#!/usr/bin/env bash

set -e

rm -rf lib

webpack --config=src/dev-client/webpack.config.js --bail

cp src/index.js lib/index.js
cp src/babel-preset.js lib/babel-preset.js
cp src/test-setup.js lib/test-setup.js

for src_path in src/*
do
  lib_path=`echo $src_path | awk 'gsub("src", "lib")'`

  if [ $lib_path != "lib/dev-client" ]; then
    cp -R $src_path $lib_path
  fi
done

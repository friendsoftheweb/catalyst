#!/usr/bin/env bash

set -e

current_branch=$(git rev-parse --abbrev-ref HEAD)

if [ "$1" != "--force" ]; then
  if [[ "$current_branch" != "master" ]]; then
    printf "The \`prepack\` command may only be run from master.\n\n"
    exit 1
  fi

  if [[ $(git status --porcelain --untracked-files=no -- | wc -l | tr -d " ") != '0' ]]  ; then
    printf "Please commit, discard, or stash the following changes and try again:"
    git status --porcelain
    exit 1
  fi
fi

yarn types:check

yarn test

yarn build
